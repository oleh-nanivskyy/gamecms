                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "gameId": { 
                                                "type": "integer"
                                            },
                                            "title": {
                                                "type": "string"
                                            },
                                            "company": {
                                                "type": "string"
                                            },
                                            "date": {
                                                "type": "string",
                                                "format": "date"
                                            }
                                        }
                                    }
                                },
                                "example": [
                                    {
                                        "gameId": 1,
                                        "title": "Far Cry 6",
                                        "company": "Ubisoft",
                                        "date": "2021-10-06"
                                    },
                                    {
                                        "gameId": 2,
                                        "title": "Titanfall",
                                        "company": "Electronic Arts",
                                        "date": "2014-03-11"
                                    }
                                ]
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error."
                    }
                }
            },
            "post": {
                "description": "Add a new game.",
                "responses": {
                    "201": {
                        "description": "Game added successfully."
                    },
                    "default": {
                        "description": "Unexpected error."
                    }
                },
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "date": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "companyId": {
                                        "type": "integer"
                                    }
                                }
                            },
                            "example": {
                                "title": "Far Cry 6",
                                "description": "New game",
                                "date": "2021-10-06",
                                "companyId": 1
                            }
                        }
                    }
                }
            }
        },
