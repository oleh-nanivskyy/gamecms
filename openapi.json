{
    "openapi": "3.0.0",
    "info": {
        "title": "Game CMS API",
        "version": "v1"
    },
    "paths": {
        "/companies": {
            "get": {
                "description": "Returns all companies.",
                "responses": {
                    "200": {
                        "description": "A list of companies.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "companyId": { 
                                                "type": "integer"
                                            },
                                            "title": {
                                                "type": "string"
                                            },
                                            "date": {
                                                "type": "string",
                                                "format": "date"
                                            }
                                        }
                                    }
                                },
                                "example": [
                                    {
                                        "companyID": 1,
                                        "title": "Ubisoft",
                                        "date": "1986-03-12"
                                    },
                                    {
                                        "companyID": 2,
                                        "title": "Electronic Arts",
                                        "date": "1982-05-27"
                                    }
                                ]
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error."
                    }
                }
            },
            "post": {
                "description": "Add a new company.",
                "responses": {
                    "201": {
                        "description": "Company added successfully."
                    },
                    "default": {
                        "description": "Unexpected error."
                    }
                },
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "ceo": {
                                        "type": "string"
                                    },
                                    "date": {
                                        "type": "string",
                                        "format": "date"
                                    }
                                }
                            },
                            "example": {
                                "title": "Ubisoft",
                                "description": "Game company",
                                "ceo": "Yves Guillemot",
                                "date": "1986-03-12"
                            }
                        }
                    }
                }
            }
        },
        "/companies/{companyId}": {
            "parameters": [ 
                {
                    "name": "companyId",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "integer"
                    }
                }
            ],
            "get": {
                "description": "Returns a company by id.",
                "responses": {
                    "200": {
                        "description": "A company.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "companyId": { 
                                            "type": "integer"
                                        },
                                        "title": {
                                            "type": "string"
                                        },
                                        "ceo": {
                                            "type": "string"
                                        },
                                        "date": {
                                            "type": "string",
                                            "format": "date"
                                        }
                                    }
                                },
                                "example": {
                                    "value": {
                                        "companyID": 1,
                                        "title": "Ubisoft",
                                        "ceo": "Yves Guillemot",
                                        "date": "1986-03-12"
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error."
                    }
                }
            },
            "put": {
                "description": "Update the company info.",
                "responses": {
                    "204": {
                        "description": "Company info updated successfully."
                    },
                    "default": {
                        "description": "Unexpected error."
                    }
                },
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "ceo": {
                                        "type": "string"
                                    },
                                    "date": {
                                        "type": "string",
                                        "format": "date"
                                    }
                                }
                            },
                            "example": {
                                "title": "Ubisoft",
                                "description": "Game company",
                                "ceo": "Yves Guillemot",
                                "date": "1986-03-12"
                            }
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete the company.",
                "responses": {
                    "204": {
                        "description": "Company deleted successfully."
                    },
                    "default": {
                        "description": "Unexpected error."
                    }
                }
            }
        },
        "/games": {
            "get": {
                "description": "Returns all games.",
                "responses": {
